    <script src="~/js/cart.js" asp-append-version="true"></script>
</body>

</html>
<!-- Modal đăng ký -->
<div class="modal fade" id="modaldangky" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Đăng ký tài khoản</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <div id="nameHelp" class="form-text text-danger"></div>
                        <label class="form-label">Tên của bạn</label>
                        <input type="text" class="form-control" id="r_nameCustomer">
                     
                    </div>
                    <div class="mb-3">
                        <div id="phoneHelp" class="form-text text-danger"></div>
                        <label class="form-label">SDT của bạn</label>
                        <input type="number" class="form-control" id="r_phoneNumber">
                       
                    </div>
                    <div class="mb-3">
                        <div id="addressHelp" class="form-text text-danger"></div>
                        <label class="form-label">Địa chỉ của bạn</label>
                        <input type="text" class="form-control" id="r_address">

                    </div>
                    <div class="mb-3">
                        <div id="datebirthHelp" class="form-text text-danger"></div>
                        <label class="form-label">Ngày sinh</label>
                        <input type="date" class="form-control" id="r_datebirth">

                    </div>
                    <div class="mb-3">
                        <div id="sexHelp" class="form-text text-danger"></div>
                        <label class="form-label">Giới tính</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="male" name="gender" value="true">
                            <label class="form-check-label" for="male">Nam</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="female" name="gender" value="false">
                            <label class="form-check-label" for="female">Nữ</label>
                        </div>
                    </div>


                    <div class="mb-3">
                        <div id="emailHelp" class="form-text text-danger"></div>
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" id="r_emailCustomer" aria-describedby="emailHelp">
                        
                    </div>
                    <div id="passwordHelp" class="form-text text-danger"></div>
                    <div class="mb-3">
                        <label class="form-label">Mật khẩu</label>
                        <input type="password" class="form-control " id="r_Password1">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Nhập lại mật khẩu</label>
                        <input type="password" class="form-control " id="r_Password2">
                    </div>

                    <button type="button" class="btn text-white bg-dark" id="btn-register">Đăng ký</button>

                </form>
            </div>

        </div>
    </div>
</div>
<!-- Modal đăng nhập -->
<div class="modal fade" id="modallogin" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Đăng nhập</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>

                    <div class="mb-3">
                        <div id="l_emailHelp" class="form-text text-danger"></div>
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" id="login_email">
                       
                    </div>

                    <div class="mb-3">
                        <div id="l_passwordHelp" class="form-text text-danger"></div>
                        <label class="form-label">Mật khẩu</label>
                        <input type="password" class="form-control " id="login_password">
                      
                    </div>


                    <button type="button" class="btn text-white bg-dark" id="btn-login">Đăng nhập</button>

                </form>
            </div>

        </div>
    </div>
</div>
<!-- Modal đổi mật khẩu -->
<div class="modal fade" id="modal-chage-pass" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Đổi mật khẩu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>

                    <div class="mb-3">
                        <div id="password-old-mess" class="form-text "></div>
                        <label class="form-label">Nhập mật khẩu cũ</label>
                        <input type="password" class="form-control" id="password-old">
                        
                    </div>

                    <div class="mb-3">
                        <div id="password-new-mess" class="form-text text-danger"></div>
                        <label class="form-label">Mật khẩu mới</label>
                        <input type="password" class="form-control " id="password-new">
                       
                    </div> 
                    <div class="mb-3">
                        <div id="password-new2-mess" class="form-text text-danger"></div>
                        <label class="form-label"> Nhập lại mật khẩu mới</label>
                        <input type="password" class="form-control " id="password-new2">
                       
                    </div>


                    <button type="button" class="btn text-white bg-dark" id="btn-change-password">Đổi</button>

                </form>
            </div>

        </div>
    </div>
</div>
<!-- Modal Gio hang -->
<div class="modal fade" id="modalcart" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Giỏ hàng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body table-responsive" >
                <table class="table">
                    <thead>
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                            <th>Xóa</th>

                        </tr>
                    </thead>
                    <tbody id="tbody_carts" class="align-middle">
                       
                    </tbody>
                    <tfoot id="tfoot_carts">
                        
                        
                    </tfoot>
                </table>
            </div>
            <div class="modal-footer" id="btn-checkout">
                <a class="btn btn-dark text-black white" href="@Url.Action("Index","CheckOut")">Thanh toán </a>
            </div>
           
        </div>

    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
