@model IEnumerable<WebsiteSellingSport.Models.Size>

@{ ViewData["Title"] = "Index"; }

<main>
    <div class="container-fluid px-4">
        <h1>Size</h1>
        @if (ViewBag.MessError != null)
        {
<span id="mess" class="alert alert-danger">
    @ViewBag.MessError
</span>}
        <p>
            <a class="btn btn-success" href="@Url.RouteUrl("areas", new {area="Admin",controller="Sizes",action="Create"})">Tạo mới</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SizeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SizeCode)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SizeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SizeCode)
        </td>
        <td>
            <a class="btn btn-warning" href="@Url.RouteUrl("areas", new {area="Admin",controller="Sizes",action="Edit" ,id=@item.SizeId})">Sửa</a> |
            <a class="btn btn-info" href="@Url.RouteUrl("areas", new {area="Admin",controller="Sizes",action="Details" ,id=@item.SizeId})">Chi tiết</a> |
            <a class="btn btn-danger" href="@Url.RouteUrl("areas", new {area="Admin",controller="Sizes",action="Delete" ,id=@item.SizeId})">Xóa</a>
        </td>
    </tr>
}
            </tbody>
        </table>
    </div>
</main>
@section Scripts{
    <script>setTimeout(function () {
            $('#mess').fadeOut('slow');
        }, 3000)</script>

}
