@using static WebsiteSellingSport.Areas.Admin.Controllers.OrderController;
@model OrderDetailViewModel
<main>
    <div class="container-fluid px-4 mt-4">
        <h1 class="mt-4">Chi tiết hóa đơn</h1>
        <div class="row">
            <div class="col-xl-6 mb-4">
                <div class="card">
                    <div class="card-body" style="border:1px #0d6efd solid ">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-user"></i>
                                <div class="ms-3">
                                    @if (Model.Customer != null)
                                    {
                                        <p class="fw-bold mb-1">
                                            Khách hàng
                                        </p>
                                        <p class="text-dark mb-0">
                                            Tên:  @Model.Customer.FullName
                                        </p>
                                        <p class="text-dark mb-0">
                                            Email: @Model.Customer.Email
                                        </p>
                                        <p class="text-dark mb-0">
                                            Số điện thoại : @Model.Customer.Phone
                                        </p>
                                    }else

                                    {
                                    <p class="fw-bold mb-1">
                                        Khách vãng lai
                                    </p>
                                    }

                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="card-footer border-0 bg-light p-2 d-flex justify-content-around">
                    </div>
                </div>
            </div>
        </div>
        <div class="card " style="width:100%">
            <div class="card-body" style="border:1px #0d6efd solid ">
                <div class="container mb-5 mt-3">
                    <div class="row d-flex align-items-baseline">
                        <div class="col-xl-9">
                            <p>
                                Hóa đơn  >> <strong>
                                    ID: #@Model.Order.OrderId
                                </strong>
                            </p>
                        </div>
                        <div class="col-xl-3 float-end">

                            <a class="btn btn-light text-capitalize" data-mdb-ripple-color="dark" id="btn-one">
                                <i class="far fa-file-pdf text-danger"></i> Export
                            </a>
                        </div>

                    </div>

                    <div class="container" id="hoadonct">
                        <div class="col-md-12">
                            <div class="text-center font-weight-bold">
                                <h2>Hóa đơn</h2>
                            </div>

                        </div>


                        <div class="row">
                            <div class="col-xl-8">
                                <ul class="list-unstyled">
                                    <li class="font-weight-bold">
                                        Họ tên người nhận: <span style="color:#0d6efd ;">

                                            @Model.Order.FullName
                                        </span>



                                    </li>

                                    <li class="font-weight-bold">
                                        Địa chỉ:  @Model.Order.Address
                                    </li>

                                    <li class="font-weight-bold">
                                        Số điện thoại: <i class="fas fa-phone"></i> @Model.Order.Phone

                                    </li>
                                    <li class="font-weight-bold">
                                        Ghi chú: @Model.Order.Note

                                    </li>
                                </ul>
                            </div>
                            <div class="col-xl-4">

                                <ul class="list-unstyled">
                                    <li class="text-dark">
                                        <i class="fas fa-circle" style="color:#0d6efd ;"></i> <span class="fw-bold font-weight-bold">
                                            ID: #@Model.Order.OrderId
                                        </span>
                                    <li class="text-dark">
                                        <i class="fas fa-circle" style="color:#0d6efd ;"></i> <span class="fw-bold">
                                            Ngày mua: @Model.Order.OrderDate
                                        </span>
                                    </li>




                                </ul>
                            </div>
                        </div>

                        <div class="row my-2 mx-1 justify-content-center">
                            <table class="table table-striped table-borderless">
                                <thead style="background-color:#2a5da9 ;" class="text-white">
                                    <tr>

                                        <th scope="col">Tên sản phẩm</th>
                                        <th scope="col">Số lượng</th>
                                        <th scope="col">Đơn giá</th>
                                        <th scope="col">Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderDetailViews)
                                    {
                                        <tr>

                                            <td>@item.ProductName  -  @item.ColorName   - @item.SizeName</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.Price.ToString("#,##0").Replace(',', '.') đ</td>
                                            <td>@item.Total.ToString("#,##0").Replace(',', '.') đ</td>

                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                        <div class="row">
                            <div class="col-xl-8">
                            </div>
                            <div class="col-xl-3">


                                <p class="text-black float-end">
                                    <span class="text-black me-3 font-weight-bold">  </span><span class="font-weight-bold" style="font-size: 25px;">
                                        @Model.Order.TotalAmount.ToString("#,##0").Replace(',', '.') đ
                                    </span>
                                </p>
                                <p class="text-black float-end">
                                    <span class="text-black me-3 font-weight-bold"> Phí giao hàng: </span><span class="font-weight-bold" style="font-size: 15px;">
                                        @Model.Order.TotalShip.Value.ToString("#,##0").Replace(',', '.') đ
                                    </span>
                                </p>
                               
                                <p class="text-black float-end">
                                    <span class="text-black me-3 font-weight-bold"> Tổng tiền </span><span class="font-weight-bold" style="font-size: 25px;">
                                        @{
                                          var x = Model.Order.TotalAmount + @Model.Order.TotalShip.Value;
                                        }
                                        @x.ToString("#,##0").Replace(',', '.') đ
                                    </span>
                                </p>
                            </div>
                        </div>
                        <hr>


                    </div>
                </div>
            </div>
        </div>
    </div>

</main>
